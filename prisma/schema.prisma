generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String  @id
  username String  @unique
  name     String
  email    String? @unique
  password String?
  image    String?

  createdAt DateTime @default(now())

  sessions Session[]
  accounts Account[]

  @@map("users")
}

model Account {
  id         String @id
  provider   String
  providerId String

  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@map("sessions")
}
